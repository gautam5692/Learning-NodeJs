<%- include("../partials/head") %>
</head>

<body>
  <%- include("../partials/host_header") %>
  <main>
    <div class="w-full flex justify-center items-center mt-10 p-4 sm:p-6 lg:p-8">
      <div class="max-w-4xl mx-auto bg-white shadow-xl rounded-lg overflow-hidden">
        <% if (home) { %>
        <h2 class="text-4xl font-extrabold text-gray-900 mb-8 pt-6 px-6 text-center border-b pb-4">
          üè° Home Details
        </h2>
        <div class="p-6 md:p-8">
          <div class="mb-8">
            <img src="<%= home.house_img_url %>">
          </div>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6 text-lg">
            <div class="p-4 border border-gray-100 rounded-md bg-gray-50">
              <p class="font-semibold text-gray-500">House Name:</p>
              <p class="text-xl font-bold text-gray-800"><%= home.house_name %></p>
            </div>

            <div class="p-4 border border-gray-100 rounded-md bg-gray-50">
              <p class="font-semibold text-gray-500">House Location:</p>
              <p class="text-xl font-bold text-gray-800"><%= home.location %></p>
            </div>

            <div class="p-4 border border-gray-100 rounded-md bg-gray-50">
              <p class="font-semibold text-gray-500">Price per Night:</p>
              <p class="text-xl font-bold text-green-600">Rs. <%= home.price %></p>
            </div>

            <div class="p-4 border border-gray-100 rounded-md bg-gray-50">
              <p class="font-semibold text-gray-500">House Rating:</p>
              <p class="text-xl font-bold text-yellow-500">
                ‚≠ê <%= home.rating %>
              </p>
            </div>
          </div>
        </div>
        </div>
        <div class="fixed top-15 flex justify-center gap-5 items-center w-full px-2">
          <%- include("../partials/edit_btn/edit_btn") %>
          <%- include("../partials/delete_btn/delete_btn") %>
        </div>
        <% } else { %>
        <div class="p-10 text-center">
          <h2 class="text-4xl font-bold text-red-600">üö® Invalid Home ID</h2>
          <p class="mt-4 text-gray-600">The requested home details could not be found. Please check the ID.</p>
        </div>
        <% } %>
    </div>
  </main>
</body>

</html>