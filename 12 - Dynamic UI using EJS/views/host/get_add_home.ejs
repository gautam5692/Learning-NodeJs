<%- include("../partials/head") %>
</head>

<body>
  <%- include("../partials/host_header") %>
  <main class="container mt-5 flex flex-col justify-center items-center p-5">
    <div class="container rounded shadow-md p-5 flex justify-center items-center flex-col">
      <h2 class="text-2xl text-center font-bold">
        Register Your Home on AirBnB
      </h2>
      <form action="/host/add-home" method="post" class="text-center p-8 w-96 flex flex-col gap-2.5 justify-center items-center">

        <input type="text" name="house_name" id="house_name" placeholder="Enter house name" autocomplete="off" required class="px-2 outline-2 outline-gray-100 rounded placeholder:text-gray-400 text-base focus:outline-rose-600 w-full" />

        <input type="text" name="house_img_url" id="house_img_url" placeholder="Enter house url" autocomplete="off" required class="px-2 outline-2 outline-gray-100 rounded placeholder:text-gray-400 text-base focus:outline-rose-600 w-full" />

        <input type="number" name="price" id="price" placeholder="Enter price per night" step="any" autocomplete="off" required class="px-2 outline-2 outline-gray-100 rounded placeholder:text-gray-400 text-base focus:outline-rose-600 w-full" />

        <input type="text" name="location" id="location" placeholder="Enter house location" autocomplete="off" required class="px-2 outline-2 outline-gray-100 rounded placeholder:text-gray-400 text-base focus:outline-rose-600 w-full" />

        <input type="number" name="rating" id="rating" placeholder="Enter house rating" step="any" autocomplete="off" required class="px-2 outline-2 outline-gray-100 rounded placeholder:text-gray-400 text-base focus:outline-rose-600 w-full" />

        <button type="submit" class="bg-rose-600 text-white rounded py-1 cursor-pointer w-full">
          Submit
        </button>
      </form>
    </div>
  </main>
</body>

</html>